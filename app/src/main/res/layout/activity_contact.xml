<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    android:orientation="vertical"

    tools:context=".contacts.ContactActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:padding="10dp"
        android:text="Have questions about the events, registrations, or schedules?\n\nWeâ€™re here to help!"
        android:textColor="@color/white" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"

        android:gravity="center">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:boxCornerRadiusTopStart="10dp"
            app:boxCornerRadiusBottomEnd="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            app:boxBackgroundMode="none">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:id="@+id/student_name"
                android:layout_height="50dp"
                android:background="@drawable/background"

                android:padding="8dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#737373"
                android:hint="Name:  "
                android:singleLine="true"/>
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"

        android:gravity="center">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:boxCornerRadiusTopStart="10dp"
            app:boxCornerRadiusBottomEnd="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            app:boxBackgroundMode="none">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:id="@+id/email_id"
                android:layout_height="50dp"
                android:background="@drawable/background"
                android:padding="8dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#737373"
                android:hint="Phone:"
                android:singleLine="true"/>
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:gravity="center">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/sports_selectot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:endIconMode="custom"
            app:boxCornerRadiusTopStart="10dp"
            app:boxCornerRadiusBottomEnd="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            android:clickable="true"
            app:endIconMinSize="50dp"
            app:endIconDrawable="@drawable/men_women_selector"
            app:boxBackgroundMode="none">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:id="@+id/sports_name"
                android:layout_height="wrap_content"
                android:background="@drawable/background"
                android:padding="8dp"
                android:enabled="false"
                android:textColor="#FFFFFF"
                android:textColorHint="#737373"
                android:hint="Enter your query: "
                android:singleLine="true"/>
        </com.google.android.material.textfield.TextInputLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:id="@+id/btnSubmit"
        android:padding="10dp"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <include
            layout="@layout/button"

            android:onClick="onIncludeClick"
            />
    </LinearLayout>

    <View
        android:layout_width="150dp"
        android:layout_height="1dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:background="@android:color/white" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">

    <TextView
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:text="Need Help?"
        android:textSize="14dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:textSize="14dp"
        android:layout_gravity="center"
        android:text="Contact Our Sports In-Charge and Volunteers!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/contact_list_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/background"
        android:orientation="vertical">

        <!-- Contact 1 -->
        <LinearLayout
            android:id="@+id/contact_item_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="8dp">

            <ImageView
                android:id="@+id/profile_icon_1"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:tint="@android:color/white"
                android:src="@drawable/user"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/contact_name_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Taun Rai"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <ImageButton
                android:id="@+id/call_icon_1"
                android:layout_width="17dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:background="@null"
                android:src="@drawable/baseline_call_24" />

            <TextView
                android:id="@+id/contact_number_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" +91 98765 43210"
                android:textColor="@android:color/white"
                android:textSize="14sp"/>
        </LinearLayout>

        <!-- Contact 2 -->
        <LinearLayout
            android:id="@+id/contact_item_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="8dp">

            <ImageView
                android:id="@+id/profile_icon_2"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:tint="@android:color/white"
                android:src="@drawable/user"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/contact_name_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Sachin Roy"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <ImageButton
                android:id="@+id/call_icon_2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/baseline_call_24"
                android:background="@null"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/contact_number_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+91 87654 32109"
                android:textColor="@android:color/white"
                android:textSize="14sp"/>
        </LinearLayout>

        <!-- Contact 3 -->
        <LinearLayout
            android:id="@+id/contact_item_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="8dp">

            <ImageView
                android:id="@+id/profile_icon_3"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/user"
                app:tint="@android:color/white"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/contact_name_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Divyesh Agrawal"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <ImageButton
                android:id="@+id/call_icon_3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/baseline_call_24"
                android:background="@null"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/contact_number_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+91 76543 21098"
                android:textColor="@android:color/white"
                android:textSize="14sp"/>
        </LinearLayout>

        <!-- Contact 4 -->
        <LinearLayout
            android:id="@+id/contact_item_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="8dp">

            <ImageView
                android:id="@+id/profile_icon_4"
                android:layout_width="24dp"
                android:src="@drawable/user"
                android:layout_height="24dp"
                app:tint="@android:color/white"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/contact_name_4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Rakshit Gajjar"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <ImageButton
                android:id="@+id/call_icon_4"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/baseline_call_24"
                android:layout_marginEnd="8dp"
                android:background="@null" />


            <TextView
                android:id="@+id/contact_number_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+91 65432 10987"
                android:textColor="@android:color/white"
                android:textSize="14sp"/>
        </LinearLayout>

    </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/background"
        android:weightSum="4"
        android:gravity="center">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_matches"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:text="Matches"
            android:background="@drawable/navigation_border"
            android:textColor="@color/white"
            style="@style/Widget.MaterialComponents.Button.TextButton" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_events"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:text="Events"
            android:textColor="@color/white"
            android:background="@drawable/navigation_border"
            style="@style/Widget.MaterialComponents.Button.TextButton" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_leaderboard"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:background="@drawable/navigation_border"
            android:text="Ranking"
            android:textColor="@color/white"
            style="@style/Widget.MaterialComponents.Button.TextButton" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_contact"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/navigation_border"
            android:layout_height="50dp"
            android:text="Contact Us"
            android:textColor="@color/white"
            style="@style/Widget.MaterialComponents.Button.TextButton" />
    </LinearLayout>


</LinearLayout>





